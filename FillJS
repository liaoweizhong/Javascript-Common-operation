(function(window,fillElement){
	
	if(windows.fillElementConfig) 
		windows[windows.fillElementConfig.name] = fillElement;
	else {
		
		if(!window.fillText)
			window.fillText = fillElement;
		
	}

})(
window,
function(idorElement,data){

	var
		mark = "$mark-";
		isbreak = false;
		Count = 0; /*已填充数量*/
		
	
	/*提供id号和对应的object数据*/	
	var dom ;
	if(typeof idorElement === "string"){
		dom = document.getElementById(idorElement);
	}else{
		dom = idorElement;
	}
	
	
	var parentDom = dom.parentNode;
	
	parentDom.innerHTML = "";
	
	var index = function(){
			
		var elemen = parentDom.getElementsByTagName("*");
		
		var index = 0;
		
		for(var i in elemen){
			
			var item = elemen[i];
			
			if(!item.tagName) return ;
			
			item.index = ++index;
			
		}
			
	}();
	
	for(var c in data){
		
		if(c == "length") return ;
		
		var cItem = data[c];
		
		var cloneDom = dom.cloneNode(true);
			
		var e = cloneDom.getElementsByTagName('*');
		
		for(var i = 0,len = e.length; i < len; i++){
			
			var item = e[i];
			
			var itemClass = item.className.replace(/\s+/g," ").split(" ");
			
			for(var j = 0,jlen = itemClass.length; j < jlen ; j++){
				
				if(itemClass[j].indexOf(mark) == 0 ){

					var dat = cItem[itemClass[j].replace(mark,"")];
					
					if(!dat) continue;
					
					var Tag = item.tagName;
					
					if(Tag == "INPUT") { item.value = dat;   }
					else{ item.innerText = dat;   }
					Count++;
					break;
				}
				
			}
			
		}
		
		parentDom.appendChild(cloneDom);
		
		dom.remove();

	}

}
)
